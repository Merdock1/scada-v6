@page "{key}"
@model MimicEditModel
@{
    Layout = "_BasicLayout";
}

@if (Model.HasError)
{
    <div class="box-center fs-2 text-danger">
        @Model.ErrorMessage
    </div>
    return;
}

@section Styles {
    <link href="~/plugins/Mimic/css/mimic.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/plugins/MimicEditor/css/mimic-edit.min.css" rel="stylesheet" asp-append-version="true" />
}

@section Scripts {
    <script type="module">
        import { Pane } from './../../../plugins/MimicEditor/lib/tweakpane/tweakpane-4.0.5.min.js';
        window.Pane = Pane;
    </script>
    <script src="~/js/components/splitter.js" asp-append-version="true"></script>
    <script src="~/plugins/Mimic/js/mimic-common.js" asp-append-version="true"></script>
    <script src="~/plugins/Mimic/js/mimic-model.js" asp-append-version="true"></script>
    <script src="~/plugins/Mimic/js/mimic-render.js" asp-append-version="true"></script>
    <script src="~/plugins/MimicEditor/js/editor.js" asp-append-version="true"></script>
    <script src="~/plugins/MimicEditor/js/mimic-descr.js" asp-append-version="true"></script>
    <script src="~/plugins/MimicEditor/js/prop-grid.js" asp-append-version="true"></script>
    <script src="~/plugins/MimicEditor/js/mimic-edit.js" asp-append-version="true"></script>
    <script>
        rootPath = "@Url.Content("~/")";
        mimicKey = "@Model.MimicKey";
    </script>
}

<div id="divToolbar"><button type="button" 
    id="btnSave" class="btn btn-outline-primary btn-sm" title="Save"><i class="fa-regular fa-floppy-disk"></i></button><span class="splitter"></span><button type="button" 
    id="btnUndo" class="btn btn-outline-primary btn-sm" title="Undo"><i class="fa-solid fa-arrow-rotate-left"></i></button><button type="button" 
    id="btnRedo" class="btn btn-outline-primary btn-sm" title="Redo"><i class="fa-solid fa-arrow-rotate-right"></i></button><span class="splitter"></span><button type="button" 
    id="btnCut" class="btn btn-outline-primary btn-sm" title="Cut"><i class="fa-solid fa-scissors"></i></button><button type="button"
    id="btnCopy" class="btn btn-outline-primary btn-sm" title="Copy"><i class="fa-solid fa-copy"></i></button><button type="button" 
    id="btnPaste" class="btn btn-outline-primary btn-sm" title="Paste"><i class="fa-regular fa-paste"></i></button><button type="button" 
    id="btnDelete" class="btn btn-outline-primary btn-sm" title="Delete"><i class="fa-regular fa-trash-can"></i></button><span class="splitter"></span><div class="dropdown d-inline-block">
        <button type="button" id="btnAlign" class="btn btn-outline-primary btn-sm dropdown-toggle" data-bs-toggle="dropdown" title="Align"><i class="fa-solid fa-arrows-down-to-line"></i></button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#">Align Lefts</a></li>
            <li><a class="dropdown-item" href="#">Align Centers</a></li>
            <li><a class="dropdown-item" href="#">Align Rights</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="#">Align Tops</a></li>
            <li><a class="dropdown-item" href="#">Align Middles</a></li>
            <li><a class="dropdown-item" href="#">Align Bottoms</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="#">Make Same Width</a></li>
            <li><a class="dropdown-item" href="#">Make Same Height</a></li>
            <li><a class="dropdown-item" href="#">Make Same Size</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="#">Make Horizontal Spacing Equal</a></li>
            <li><a class="dropdown-item" href="#">Make Vertical Spacing Equal</a></li>
        </ul>
    </div>
</div>
<div id="divMain">
    <div id="divLeftPanel"></div>
    <div id="divSplitter" class="splitter vert"></div>
    <div id="divMimicWrapper" class="mimic-wrapper"></div>
</div>
